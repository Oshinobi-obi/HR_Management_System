@model Ronquillo_Activity1.Models.Registration

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Ronquillo | Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>REGISTERED DETAILS</h2>
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

            <dt class="col-sm-3">Password</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

            <dt class="col-sm-3">Confirm Password</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ConfirmPassword)</dd>

            <dt class="col-sm-3">Country</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-3">Mobile</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Mobile)</dd>
        </dl>

        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>